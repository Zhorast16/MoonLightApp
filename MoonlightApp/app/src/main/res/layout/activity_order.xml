<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bOrder">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="please fill the form to make an order"
                    android:textSize="15sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:hint="Nama"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:hint="Nomor Meja"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Food"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">
                <CheckBox
                    android:id="@+id/nasgor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="4"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Nasi Goreng" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Rp. 10.000" />
                </LinearLayout>
                <EditText
                    android:id="@+id/qty1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="2"
                    android:textSize="15dp"
                    android:hint="Jumlah"
                    android:inputType="number"
                    android:textAlignment="center"/>
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">
                <CheckBox
                    android:id="@+id/miegor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="4"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Mie Goreng" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Rp. 9.000" />
                </LinearLayout>
                <EditText
                    android:id="@+id/qty2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="2"
                    android:textSize="15dp"
                    android:hint="Jumlah"
                    android:inputType="number"
                    android:textAlignment="center"/>
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">
                <CheckBox
                    android:id="@+id/miereb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="4"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Mie Rebus" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Rp. 8.000" />
                </LinearLayout>
                <EditText
                    android:id="@+id/qty3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="2"
                    android:textSize="15dp"
                    android:hint="Jumlah"
                    android:inputType="number"
                    android:textAlignment="center"/>
            </GridLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Drink and Ice Cream"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">
                <CheckBox
                    android:id="@+id/gtea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="4"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Green Tea" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Rp. 5.000" />
                </LinearLayout>
                <EditText
                    android:id="@+id/qty4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="2"
                    android:textSize="15dp"
                    android:hint="Jumlah"
                    android:inputType="number"
                    android:textAlignment="center"/>
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">
                <CheckBox
                    android:id="@+id/choco"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="4"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Ice Chocolava" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Rp. 15.000" />
                </LinearLayout>
                <EditText
                    android:id="@+id/qty5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="2"
                    android:textSize="15dp"
                    android:hint="Jumlah"
                    android:inputType="number"
                    android:textAlignment="center"/>
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">
                <CheckBox
                    android:id="@+id/moon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="4"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Ice Special MoonLight" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Rp. 25.000" />
                </LinearLayout>
                <EditText
                    android:id="@+id/qty6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="2"
                    android:textSize="15dp"
                    android:hint="Jumlah"
                    android:inputType="number"
                    android:textAlignment="center"/>
            </GridLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/bOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:padding="5dp"
            android:text="Send Order"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="italic"/>
    </LinearLayout>
</RelativeLayout>